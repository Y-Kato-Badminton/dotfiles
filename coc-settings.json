{
  "languageserver": {
    "golang": {
      "command": "bingo",
      "args": [
        "--format-style",
        "goimports",
        "--cache-style",
        "on-demand",
        "-mode",
        "stdio",
        "--diagnostics-style=instant"
      ],
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "nix": {
      "command": "nix-lsp",
      "filetypes": [
        "nix"
      ],
      "args": []
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "zsh", "bash"],
      "ignoredRootPaths": ["~"]
    },
    "python": {
      "command": "pyls",
      "filetypes": [
        "python"
      ],
      "args": []
    },
    "efm": {
      "command": "efm-langserver",
      "args": [
        "-c",
        "$HOME/.config/nvim/efm-lsp-conf.yaml"
      ],
      "filetypes": [
        "vim",
        "eruby",
        "markdown"
      ]
    }
  }
}
